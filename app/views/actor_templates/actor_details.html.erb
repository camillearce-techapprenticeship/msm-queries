<h1> Actor #<%= @this_actor.id %> details </h1>

<p> <a href="/actors">Go back</a></p>
<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @this_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
     <%= @this_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= @this_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @this_actor.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@this_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@this_actor.updated_at) %> ago
  </dd>
</dl>

<hr>
<h1> Filmography </h1>

<table border="1">
  <tr>
    <td>
    Title
    </td>
    <td>
    Year
    </td>
    <td>
    Director
    </td>
    <td>
    Character Name
    </td>
  </tr>
  <% @this_character.each do |character| %>
   <tr>
    <td>
    <% movie = Movie.where({ :id => character.movie_id }).at(0) %>
    <%= movie.title %>
    </td>
    <td>
    <%= movie.year %>
    </td>
    <td>
    <% movie_director = Director.where({ :id => movie.director_id }).at(0) %>
    <%= movie_director.name %>
    </td>
    <td>
    <%= character.name %>
    </td>
  </tr>
  <% end %>
</table>
